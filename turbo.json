{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "@traderforecast/web#dev": {
      "dependsOn": ["lightweight-charts-plugin#build"]
    },
    "lightweight-charts-plugin#build": {
      "dependsOn": ["^build"],
      "outputs": ["compiled/**", ".next/**", "!.next/cache/**"]
    }
  }
}
